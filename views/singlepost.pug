doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Medium Clone 
        // Bootstrap css framework from CDN
        link(rel='stylesheet' type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")

        // Font Awesome css library for icons 
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")

        // custom css 
        link(rel='stylesheet' type="text/css" href="/css/styles.css")
    body
    // Responsive navbar
nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container
        a.navbar-brand(href='http://localhost:3001/') Medium Clone API
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.ms-auto.mb-2.mb-lg-0
                li.nav-item
                    a.nav-link(href='http://localhost:3001/') Home
                li.nav-item
                    a.nav-link(href='#!') About
                li.nav-item
                    a.nav-link(href='#!') Contact
                li.nav-item
                    a.nav-link.active(aria-current='page' href='#') Blog
// Page content
.blogdetails.container
    .row.no-gutters.d-flex.align-items-start
        .col-md-8
            .card-body
                h2.card-title.h4= post.title
                p.card-text= post.content
        .image-container.col-md-4
            a(href=`/posts/${post.id}`)
                img.card-img-top(src=post.image_url alt=post.title)
        section
            .container.my-5.py-5
                .row.d-flex
                    .col-md-12.col-lg-10.col-xl-8
                        h2 Comments Section
                        .card 
                        each comment in comments
                            .card-body
                                .d-flex.flex-start.align-items-center
                                p.mt-3.mb-4.pb-2
                                    | #{comment.content}
                            hr
                        form.d-flex.flex-start.w-100(action=`/posts/${post.id}/comments` method='post')
                            .form-outline.w-100(data-mdb-input-init='')
                                textarea#textAreaExample.form-control(name='content' rows='4' style='background: #fff;')
                                label.form-label(for='textAreaExample') Add comment and click post
                                .float-end.mt-2.pt-1
                                    button.btn.btn-primary.btn-sm(type='submit' data-mdb-button-init='' data-mdb-ripple-init='') Post comment     

// Footer
footer.py-5.bg-dark
    .container
        footer.py-5.bg-dark
    .container
        p.m-0.text-center.text-white Copyright &copy; 2024 Designed with <i class="fa fa-heart text-danger"></i> by Hom Dahal
// Bootstrap core JS
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')